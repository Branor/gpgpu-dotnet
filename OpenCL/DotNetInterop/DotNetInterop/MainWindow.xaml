<Window x:Class="DotNetInterop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Name="log" IsReadOnly="True" />
        <Button Grid.Row="1" Content="Device Info" Click="DeviceInfo" />
        <Button Grid.Row="2" Content="Run C++ Amp" Click="RunAmp" />
        <Button Grid.Row="3" Content="Run OpenCL" Click="RunOpenCL" />
    </Grid>
</Window>
